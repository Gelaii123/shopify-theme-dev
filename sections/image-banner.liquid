{{ 'parameter-details.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .parameter-details-section .parameter-details__text-row {
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  gap: 64px;
  align-items: end;
  margin-bottom: 60px;
}

.parameter-details-section .heading {
  text-align: left;
  max-width: 720px; /* ðŸ‘ˆ prevents ugly line breaks */
  font-size: clamp(44px, 5vw, 64px);
  line-height: 1.05;
  font-weight: 400;
}

.parameter-details-section .description {
  text-align: left;
  max-width: 420px;
  margin-left: auto; /* ðŸ‘ˆ pushes it cleanly to the right */
  color: #000000;
}

/* Image styling */
.parameter-details__image img {
  width: 100%;
  height: auto;
  border-radius: 20px;
  object-fit: cover;
}

/* Mobile */
@media screen and (max-width: 749px) {
  .parameter-details-section .parameter-details__text-row {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .parameter-details-section .description {
    max-width: 100%;
  }
}


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style></style>

{% liquid
  assign sizes = '(min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
  assign widths = '832, 1200, 1600, 1920, 2560, 3840'
  assign sizes_mobile = media_width_mobile
  assign mobile_widths = '416, 600, 800, 1200, 1600'

  assign fetch_priority = 'auto'

  if section.index == 1
    assign fetch_priority = 'high'
  endif
%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} parameter-details-section image-banner-section">
  <div class="page-width">
    <div class="parameter-details__text-row">
      {% if section.settings.heading %}
        <h2 class="title heading" data-aos="fade-up">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description %}
        <p class="description" data-aos="fade-up">
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    <div class="parameter-details__image" data-aos="fade-up">
      {% if section.settings.image %}
        {{
          section.settings.image
          | image_url: width: 3840
          | image_tag:
            width: section.settings.image_1.width,
            widths: widths,
            height: section.settings.image_1.height,
            alt: section.settings.image_1.alt,
            sizes: sizes,
            fetchpriority: fetch_priority
        }}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Parameter details",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "description",
      "label": "Description",
      "default": "Description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Image banner"
    }
  ]
}
{% endschema %}
